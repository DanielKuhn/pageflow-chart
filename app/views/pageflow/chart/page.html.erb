<div class="black_layer"></div>
<div class="content_and_background chart_page">
  <div class="page_background">
    <%= page_background_asset(page) %>
    <%= shadow_div :opacity => configuration['gradient_opacity'] %>
  </div>

  <div class="content">
    <div class="iframeWrapper">
      <%= scraped_site_iframe(configuration['scraped_site_id']) %>
      <div class="iframe_overlay"></div>
      <div class="bigscreen_toggler" tabindex="4" title="<%= t('pageflow.public.chart.toggle') %>"><%= t('pageflow.public.chart.toggle') %></div>
    </div>
    <div class="scroller">
      <div>
        <div class="content_wrapper">
          <%= page_default_content(page) %>
        </div>
      </div>
    </div>
  </div>
</div>
